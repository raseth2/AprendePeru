<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cropToPadding="true"
        android:background="@color/bg_login"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            />

        <TextView
            android:id="@+id/tvLogin"
            android:text="Cuentanos Sobre ti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            />
    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:paddingLeft="20dp"
            android:textColor="@color/bg_login"
            android:textStyle="bold|italic"
            android:id="@+id/txtViewCurriculum"
            android:text="Â¡Bienvenido!"
            android:textSize="24sp"
            />




    <EditText
        android:id="@+id/txtInsttitucionEducativa"
        android:hint="Nombres "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:singleLine="true"

       />
        <EditText
            android:id="@+id/txtProfesion"
            android:hint="Apellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:singleLine="true"
            />

        <Spinner
            android:id="@+id/spEstudios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            />


        <EditText
        android:id="@+id/txtLugarTrabajo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:singleLine="true"
        android:hint="Telefono"
        />

    <EditText
        android:id="@+id/txtEmailPer"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/txtFechaNac"
        android:hint="Fecha de Nacimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/txtDireccion"
        android:hint="Direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:singleLine="true"/>

        <Button
            android:onClick="next1"
            android:id="@+id/btn_next"
            android:text="Continuar"
            android:layout_marginTop="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@color/bg_login"
            />

    </LinearLayout>
</LinearLayout>